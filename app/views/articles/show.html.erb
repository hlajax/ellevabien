<%=render 'menus/main'%>
<div class="container-fluid">
	<div class="row" style="background:url('<%= @article.image.url %>')no-repeat;background-size:cover;background-position:center top;height:350px;">
		<div class="col-lg-12">
			
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-10 m-top-mini">
			<div class="row">
				<div class="col-lg-12 col-12">
						<h1 class="text-maj text-bold"><%= @article.titre %></h1>
				</div>
				<div class="col-lg-5 col-12">
					<div style="width:25%;float:left;">
						<img  class="img-fluid img-cercle" src="https://via.placeholder.com/150C/O https://placeholder.com"/ >
				</div>
				<div style="width:50%;float:left;margin-left:5%;margin-top:8%;"><%= @article.auteur.nom %></div>
				</div>
				<div class="col-lg-12 col-12 contenu">
					<p><%= raw(@article.contenu) %></p>
				</div>
			</div>
		</div>
	</div>
</div>
<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
